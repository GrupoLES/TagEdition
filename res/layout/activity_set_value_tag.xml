<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".SetValueTag" >

   <LinearLayout
       android:layout_gravity="center"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#000000"
	    android:orientation="horizontal" >

       <LinearLayout
           android:layout_margin="30dp"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical" >

           <ImageView
               android:id="@+id/ImageCapaMusica"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:src="@drawable/image_cover_music" />

           <TextView
               android:id="@+id/textCapa"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:text="Capa"
               android:textColor="#FFFFFF" />
       </LinearLayout>
		
  		<LinearLayout
  		     android:layout_gravity="center"
  		    android:layout_margin="10dp"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:background="#000000"
	    	android:orientation="vertical" >
		<LinearLayout android:layout_margin="10dp" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:layout_gravity="center">

   			<ImageButton
   			    android:layout_gravity="center"
   			    android:id="@+id/botaoCapa"
   			    android:layout_width="wrap_content"
   			    android:layout_height="wrap_content"
   			    android:background="#000000"
   			    android:src="@drawable/card" />

   			<TextView
			      android:id="@+id/textImagemCatao"
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:text="cartÃ£o"
			      android:layout_gravity="center"
			      android:textColor="#FFFFFF"/>
		</LinearLayout>
		<LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    		<ImageButton
    		    android:layout_gravity="center"
    		    android:background="#000000"
        		android:src="@drawable/nuvem"
        		android:id="@+id/botaoInternet"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		
				/>    	
				<TextView
			      android:id="@+id/textImagemInternet"
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:text="Internet"
			      android:layout_gravity="center"
			      android:textColor="#FFFFFF"/>
			</LinearLayout>
    	</LinearLayout>
    </LinearLayout>
    <LinearLayout
         android:layout_gravity="center"
        android:layout_margin="10dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#000000"
	    android:orientation="vertical" >
  		
  		<LinearLayout
  		     android:layout_gravity="center"
  		    android:layout_margin="10dp"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="#000000"
		    android:orientation="horizontal" >
    		<TextView
    		    android:layout_gravity="center"
    		    android:textColor="#FFFFFF"
		        android:id="@+id/textViewAutor"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Autor: " />
    		<EditText
    		    android:textColor="#FFFFFF"
			    android:id="@+id/editTextAutor"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		        android:ems="10" >
    		    
    		</EditText>
  		    
  		    
  		</LinearLayout>
  		<LinearLayout
  		     android:layout_gravity="center"
  		    android:layout_margin="10dp"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="#000000"
		    android:orientation="horizontal" >
    		    <TextView
    		        android:textColor="#FFFFFF"
			        android:id="@+id/textViewAlbum"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="Album: " />
  		    	<EditText
  		    	    android:textColor="#FFFFFF"
			        android:id="@+id/editTextAlbum"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:ems="10" />
    	</LinearLayout>
    
  		<LinearLayout
  		     android:layout_gravity="center"
  		    android:layout_margin="10dp"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="#000000"
		    android:orientation="horizontal" >
  		    	
    		<TextView
    		    android:textColor="#FFFFFF"
		        android:id="@+id/textViewGenero"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Genero: " />
    		<EditText
    		    android:textColor="#FFFFFF"
		        android:id="@+id/editTextGenero"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:ems="10" />
    		
    	</LinearLayout>	
  		
  	</LinearLayout>
  	<LinearLayout
  	     android:layout_gravity="center"
  		    android:layout_margin="10dp"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:background="#000000"
	    	android:orientation="horizontal" >
  		
  	    <LinearLayout  android:layout_marginLeft="20dp" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">

  	        <ImageButton
  	              android:layout_gravity="center"
  	            android:id="@+id/botaoLimpar"
  	            android:layout_width="wrap_content"
  	            android:layout_height="wrap_content"
  	            android:background="#000000"
  	            android:src="@drawable/limpar" />

  			<TextView
		        android:layout_gravity="center"
			      android:id="@+id/textBotaoLimpar"
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:text="Limpar"
			      android:textColor="#FFFFFF"/>
		</LinearLayout>
		<LinearLayout android:layout_marginLeft="40dp" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
		    <ImageButton
		        android:layout_gravity="center"
		        android:background="#000000"
		        android:src="@drawable/cancelar"
		        android:id="@+id/botaoCancelar"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        />
		    <TextView
		        android:layout_gravity="center"
			      android:id="@+id/textBotaoCancelar"
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:text="Cancelar"
			      android:textColor="#FFFFFF"/>
		</LinearLayout>
		<LinearLayout android:layout_marginLeft="50dp" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
		    <ImageButton
		          android:layout_gravity="center"
		        android:background="#000000"
		        android:src="@drawable/salvar"
		        android:id="@+id/botaoSalvar"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        />
		  	    <TextView
		  	        android:layout_gravity="center"
			      android:id="@+id/textBotaoSalvar"
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:text="Salvar"
			      android:textColor="#FFFFFF"/>
  	    </LinearLayout>
  	</LinearLayout>
  
</LinearLayout>
