<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tagedition"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.com.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.activity.SetValueTag"
            android:label="@string/title_activity_set_value_tag" >
        </activity>
        <activity
            android:name="br.com.player.PlayerActivity"
            android:label="@string/title_activity_player" >
        </activity>
        <activity
            android:name="br.com.activity.CarregarActivity"
            android:label="@string/title_activity_carregar" >
        </activity>
        <activity
            android:name="br.com.activity.FotosActivity"
            android:label="@string/title_activity_fotos" >
        </activity>
        <activity
            android:name="br.com.activity.CapaInternetActivity"
            android:label="@string/title_activity_capa_internet" >
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:name="br.com.activity.FacebookConnActivity"
            android:label="@string/title_activity_facebook_conn" >
        </activity>
    </application>

</manifest>
